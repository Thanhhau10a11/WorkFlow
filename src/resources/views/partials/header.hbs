<header class="app-header" style="position: relative;">
    <div class="app-header-logo">
        <div class="logo">
            <span class="logo-icon">
                <img src="https://assets.codepen.io/285131/almeria-logo.svg" />
            </span>
            <h1 class="logo-title">
                <span>Work-Flow</span>
                {{!-- <span>Flow</span> --}}
            </h1>
        </div>
    </div>
    <div class="app-header-navigation">
        <div class="tabs">
            <a href="#">
                Overview
            </a>
            <a href="#" class="">
                Payments
            </a>
            <a href="#">
                Cards
            </a>
            <a href="#">
                Account
            </a>
            <a href="#">
                System
            </a>
            <a href="#">
                Business
            </a>
        </div>
    </div>
    <div class="app-header-actions">
        <button class="user-profile">
            {{#if Name}}
            <span>{{{Name}}}</span>
            {{else}}
            <span><a href="/login">Login</a></span>
            {{/if}}
            <span>
                <img src="/img/user.png" />
            </span>
        </button>
        <div class="app-header-actions-buttons">
            <button class="icon-button large">
                <i class="ph-magnifying-glass"></i>
            </button>
            <button class="icon-button large" id="notification-button" style="position: relative;">
                <i class="ph-bell"></i>
                <span id="notification-dot" class="notification-dot" style="display: none;"></span>
            </button>
            <div id="notification-panel" class="notification-panel" style="display: none;">
                <h3>Thông báo</h3>
                <ul id="notification-list"></ul>
                <div id="no-notifications" class="no-notifications" style="display: block;">
                    <p>Không có thông báo nào!</p>
                </div>
            </div>
            <button onclick="window.location.href='/logout'" class="icon-button large">
                <i class="fa-solid fa-arrow-right-from-bracket"></i>
            </button>
        </div>
    </div>
    <div class="app-header-mobile">
        <button class="icon-button large">
            <i class="ph-list"></i>
        </button>
    </div>

</header>

